{
  "name": "@ro/react-auth",
  "version": "0.0.0",
  "description": "Set of authentication components and containers such as: Sign In, Sign Up, Sign Out, Reset Password, authorization wrappers",
  "repository": "github:HealthByRo/react-auth",
  "author": "Ro Front-End Team <team@arabel.la>",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "npm run lint & npm run test:badge",
    "build": "rm -rf lib && npm run quick-build",
    "quick-build": "babel -d lib/ src/ --ignore \"**/*.test.js\",\"**/*.stories.js\"",
    "test": "jest --config=.jest.json --coverage",
    "test-nc": "jest --config=.jest.json",
    "test:watch": "jest --config=.jest.json --no-cache --watchAll",
    "test:badge": "npm run test && node ./scripts/coverage.js",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern 'flow-typed/' --ignore-pattern 'lib/' --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "prerelease": "git checkout master && git pull && git checkout develop && git pull",
    "release": "npm version",
    "postrelease": "git push && git push --tags && git checkout master && git merge develop && git push && git checkout develop"
  },
  "lint-staged": {
    "*.js": "lint:eslint"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "humps": "^2.0.1",
    "js-base64": "^2.5.1",
    "md5": "^2.2.1",
    "query-string": "^6.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "7.0.0",
    "@testing-library/react": "^9.1.3",
    "api-client": "https://github.com/HealthByRo/api-client#^1.3.6",
    "axios-mock-adapter": "^1.17.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-root-import": "^6.4.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "jest": "^24.9.0",
    "jsdom": "^15.1.1",
    "lcov2badge": "^0.1.0",
    "lint-staged": "^9.2.5",
    "mockdate": "^2.0.5",
    "prop-types": "^15.7.2",
    "raf": "^3.4.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "homepage": "https://github.com/HealthByRo/react-auth/"
}
