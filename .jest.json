{
  "testURL": "https://test.com/",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/*.test{s}.{js,jsx}",
    "!src/**/*.stories.js"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    ".stories.js"
  ],
  "testRegex": "src/.*\\.test[s]?\\.js$",
  "setupFiles": [
      "raf/polyfill",
      "<rootDir>/internals/testing/test-bundler.js"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  }
}